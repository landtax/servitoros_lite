<div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">

  <% file = UploadedFile.new(name: "New file") %>
  <%= simple_form_for file, :html => {:multipart => true, :class => ''} do |f| %>
    <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel"><%= t(:select_file) %></h3>
    </div>
    <div class="modal-body">

    <div class="row" id="">
      <div class="span6">
        <ul>
          <li>
          <strong><%= t(:pdt_or_txt_files).html_safe %></strong>
          </li>
          <li>
          <%= t(:office_not_valid).html_safe %>
          </li>
          <li>
          <%= t(:max_file_size).html_safe %>
          </li>
        </ul>
    </div>
    </div>
    <div class="row" id="">
        <div class="span4">
          <%= f.input :file, :label => false, :as => :file %>
        </div>
        <div class="span2">
        </div>
    </div>

    <div class="modal-footer">

      <button class="btn" data-dismiss="modal" aria-hidden="true"><%= t(:close) %></button>
        <button type="submit" class="btn" name="commit">
          <i class="icon-upload icon-white"></i> <%= t(:upload_file) %>
        </button>
    </div>
    </div>
  <% end %>
</div>
