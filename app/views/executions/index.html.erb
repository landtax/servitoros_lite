<div class="row">
  <%= simple_form_for @execution, :html => {:class => ''} do |f| %>
    <%= f.fields_for :input_parameters do |input_params| %> 
      <% @input_ports.each do |port| %>

        <%= input_params.fields_for :inputs do |inputs| %>
            <% hint = @input_descriptor.send(port).description %>
            <% hint = "" if hint.upcase == port.to_s.upcase %>
            <% value = @execution.input_parameters[:inputs][port] if @execution.input_parameters %>
            <%= inputs.input port, as: :text, hint: hint, input_html: {value: value, rows: 3, class: 'span4'}  %>
        <% end %>
      <% end %>

    <% end %>

    <%= f.button :submit %>
<% end %>
</div>

<div class="row"><h1>Previous executions</h1></div>

<div class="row">
  <table class="table table-condensed">
    <thead>
      <tr>
        <th>Date</th>
        <th>Status</th>
        <th>Results</th>
      </tr>
    </thead>
    <tbody>

    <% @executions.each do |execution| %>
      <tr class="<%= execution_status_class(execution) %>">
        <td> <%= l execution.created_at, :format => :list_datetime %></td>
        <td>
          <%= execution.status.to_s.humanize %>
        </td>

        <td>
        <% if execution.finished? %>
          <% if execution.results %>
            <% execution.results.each do |output_id, output| %>
            <ol>
            <% output.each do |o| %>
              <li>
              <%= link_to "Download", o[:value] %> (<%= number_to_human_size(o[:size].to_i) %>)
              </li>
            <% end %>
            </ol>
            <% end %>
          <% else %>
          Error
          <% end %>
        <% end %>
        </td>
      </tr>
    <% end %>

    </tbody>
    <th>
    </th>
  </table>

</div>
<div class="row">
  <%= paginate @executions, :theme => 'twitter-bootstrap', :pagination_class => "pagination-small pagination-centered" %>
</div>

